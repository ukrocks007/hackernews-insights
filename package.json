  "description": "",
  "main": "index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package:pi": "npm run build && pkg . --targets node18-linux-arm64 --out-path bin",
    "package:mac": "npm run build && pkg . --targets node18-macos-arm64 --out-path bin",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/sqlite3/lib/binding/**/*",
      "config/**/*"
    ],
    "outputPath": "bin"
  }
}
